@page
@model exercicio_12.Pages.AddEventModel
@{
    ViewData["Title"] = "Cadastrar Evento";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    
    <form method="post" class="mt-4">
        <div class="form-group mb-3">
            <label asp-for="NovoEvento.Titulo" class="form-label">TÃ­tulo do Evento</label>
            <input asp-for="NovoEvento.Titulo" class="form-control" required>
            <span asp-validation-for="NovoEvento.Titulo" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="NovoEvento.Data" class="form-label">Data do Evento</label>
            <input asp-for="NovoEvento.Data" type="datetime-local" class="form-control" required>
            <span asp-validation-for="NovoEvento.Data" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="NovoEvento.Local" class="form-label">Local do Evento</label>
            <input asp-for="NovoEvento.Local" class="form-control" required>
            <span asp-validation-for="NovoEvento.Local" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Cadastrar Evento</button>
    </form>

    @if (Model.MensagemSucesso != null)
    {
        <div class="alert alert-success mt-4">
            @Model.MensagemSucesso
        </div>
    }
</div>